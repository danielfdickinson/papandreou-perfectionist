{
    "env": {
      "browser": false,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "ignorePatterns": [
      "src/__tests__/fixtures/**",
      "node_modules/**",
      "dist/**"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "ava"
    ],
    "root": true,
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
